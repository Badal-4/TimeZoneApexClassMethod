public static String convertTimeZoneUserLocale(Integer offset,String currentDateInGMT)
    {
        String slotstartDate = currentDateInGMT.replace('T', ' ');
        slotstartDate +=':00';
        Datetime dt = DateTime.valueOfGMT(slotstartDate);
        String returnTime = dt.format('yyyy-MM-dd HH:mm',  UserInfo.getTimeZone().toString() );
        returnTime = returnTime.replace(' ', 'T');
        return returnTime;
    }
    
